#!/bin/bash

PATH_TO_DISCORD_RICH_PRESENCE_PLEX="$HOME/Developer/discord-rich-presence-plex"
SESSION_NAME="plex-presence"

if tmux has-session -t $SESSION_NAME 2>/dev/null; then
    tmux kill-session -t $SESSION_NAME
fi

COMMAND="cd $PATH_TO_DISCORD_RICH_PRESENCE_PLEX; zsh -c './.venv/bin/python3 main.py; zsh'"

tmux new-session -d -s $SESSION_NAME "$COMMAND"
